{
  "name": "todo-list-web",
  "version": "1.0.0",
  "description": "A modular TODO list web application with user authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon server.js",
    "dev:frontend": "npm --prefix ./client run dev",
    "build": "npm --prefix ./client run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --runInBand",
    "test:frontend": "npm --prefix ./client test"
  },
  "keywords": [
    "todo",
    "task",
    "mongodb",
    "authentication"
  ],
  "author": "Ansh Gopinath",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
