# Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
ENV=dev

# API Keys for AI-powered insights (Milestone 3)
# At least one key required for AI recommendations
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here

# LLM Configuration
# Provider order for failover (comma-separated: OPENAI,ANTHROPIC,GEMINI)
# Use GEMINI first as it's most reliable in some environments
LLM_PROVIDERS=GEMINI,OPENAI,ANTHROPIC
# Timeout per provider call (seconds)
LLM_TIMEOUT_SECONDS=20
# Max tokens in LLM response
LLM_MAX_TOKENS=800

# Security Settings (optional overrides)
# MAX_FILE_SIZE_MB=5
# MAX_TEXT_CHARS=100000
# SESSION_ANALYSIS_LIMIT=10

# Milestone 4 Features
# Enable/disable export report feature
ENABLE_EXPORT_REPORT=true
# Enable anonymous usage counter (privacy-safe, no PII)
ANON_COUNTER_ENABLE=false
# Enable PDF preview in UI
ENABLE_PDF_PREVIEW=true
# Maximum analyses per session
MAX_ANALYSES_PER_SESSION=10
# Maximum AI insight requests per session
MAX_AI_RUNS_PER_SESSION=2
# Debug mode (verbose logging)
DEBUG_MODE=false
